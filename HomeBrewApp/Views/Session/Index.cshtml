@model IEnumerable<HomebrewApp.Models.SessionListItem>

@{
    ViewBag.Title = "Sessions";
}

<h2>Sessions</h2>

<p>
    @Html.ActionLink("Create New Session", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SessionId }) |
                @Html.ActionLink("Details", "Details", new { id=item.SessionId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SessionId })
            </td>
        </tr>
    }

</table>
